{
    "metadata": {
        "game_uid": "valhiem",
        "version": "0.1.0",
        "type": "steamcmd",
        "project": "https://github.com/nox-noctua-consulting/peon-plans/tree/master/games/valhiem",
        "maintainers": "umlatt <richard@noxnoctua.com>",
        "description": "https://raw.githubusercontent.com/nox-noctua-consulting/peon-recipies/master/csgo/README.md"
    },
    "container_config": {
        "image": "cm2network/steamcmd",
        "user": "steam",
        "ports": {
            "2456/tcp": 2456,
            "2457/tcp": 2457
        },
        "variables": {
            "STEAMID": "896660",
            "LD_LIBRARY_PATH": "/home/steam/steamcmd/data:/home/steam/steamcmd/data/bins",
            "SERVERNAME": "PEON",
            "WORLDNAME": "WORLD",
            "PASSWORD": "password123"
        },
        "volumes": {
            "shared_plan_path": {
                "bind": "/home/steam/steamcmd/peon/shared",
                "mode": "rw"
            },
            "unique_plan_path": {
                "bind": "/home/steam/steamcmd/peon/unique",
                "mode": "rw"
            },
            "config": {
                "bind": "/home/steam/.config/unity3d/IronGate/Valheim",
                "mode": "rw"
            },
            "data_path": {
                "bind": "/home/steam/steamcmd/data",
                "mode": "rw"
            },
            "log_path": {
                "bind": "/var/log/peon",
                "mode": "rw"
            }
        },
        "working_directory": "/home/steam/steamcmd",
        "command": "peon/shared/steamcmd_trigger_start.sh"
    },
    "server_config": {
        "commands": [
            "peon/shared/steamcmd_server_update.sh"
        ]
    }
}